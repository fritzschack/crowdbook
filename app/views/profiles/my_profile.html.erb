<div class="profile">
  <div class="profile-banner" style="background-image: url('https://images.unsplash.com/photo-1549321682-36e2f8000f4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80');">
    <div class="row profile-grid">
      <div class="col-sm-5">
        <div class="profile-card">
          <%= cl_image_tag current_user.profile_picture, class: 'profile-card-image' %>
          <div class="profile-card-bottom">
            <div class="profile-about">
              <p><strong><small>About:</small></strong></p>
              <p><small><%= current_user.description %></small></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-7 profile-right">
        <div class="row">
          <div class="col-sm-12">
            <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
          </div>
          <div class="col-sm-12 edit-profile">
            <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn edit-profile-button'  %>
          </div>
          <div class="col-sm-12">
            <div class="my-campaigns-title">
             <h3>My Campaigns</h3>
             <hr>
            </div>
            <% @campaigns.each do |campaign| %>
              <div class="index-card">
                <div class="row">
                  <div class="col-sm-4 card-left" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path campaign.photos.first.image_url %>')">
                    <p><small><%= campaign.genre.upcase %></small></p>
                  </div>
                  <div class="col-sm-8 card-right">
                    <div class="card-title">
                      <%= link_to campaign_path(campaign) do %>
                        <h3><%= campaign.name %></h3>
                      <% end %>
                      <p><i class="far fa-calendar-check"></i> <%= campaign.date.to_s.split('-').reverse.join('-') %></p>
                      <p><i class="far fa-compass"></i> <%= campaign.address %></p>
                    </div>
                    <div class="card-description">
                      <p style="opacity: 0.6;"><%= campaign.description[0..100]%>...</p>
                      <%= link_to "Edit Campaign", edit_campaign_path(campaign), class: 'edit-campaign' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
