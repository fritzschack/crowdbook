<div class="container">
  <div class="campaign">
    <% if @campaigns.size == 0 %>
      <h3>Sorry, No Results Were Found!</h3>
    <% else %>
      <% @campaigns.each do |campaign| %>
        <div class="card-description">
          <div class="col-xs-12 col-sm-6 col-md-6" style="justify-content: space-around; margin-bottom: 25px;">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)) ">
              <div class="card-name">
                <h2> <%= link_to campaign.name, campaign_path(campaign)  %>
                </h2>
              </div>
              <div class="card-description">
                <p>$<%= campaign.name %></p>
                <p><%= campaign.address %></p>
              </div>
              <%= link_to "", campaign_path(campaign), :class => "card_link"  %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
