<div class="login-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.7) 0%, rgba(0,36,61,0.7) 50%), url(' https://source.unsplash.com/collection/572418/1600x800');">
</div>
<div class="container" style="min-height: 70vh;margin: 0 auto;">
  <div class="signup-form-container">
    <center><h3 style="margin-bottom: 20px;">Login</h3></center>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
