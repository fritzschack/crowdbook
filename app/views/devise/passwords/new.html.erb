<div class="forgot-password-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.7) 0%, rgba(0,36,61,0.7) 50%), url(' https://source.unsplash.com/collection/572418/1600x800');">
</div>

<div class="container">
  <div class="container" style="min-height: 70vh;margin: 0 auto;">
    <div class="forgot-password-form-container">
      <center><h3 style="margin-bottom: 20px;">Forgot Password?</h3></center>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
