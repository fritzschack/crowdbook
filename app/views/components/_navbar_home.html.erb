<div class="navbar-home">
  <a href="/" class="navbar-home-logo-text">
    <img src="https://res.cloudinary.com/dsfmdlng2/image/upload/v1552372241/alternate_crowdbook_logo.png" class="logo"></i>
    <!-- <p>crowdbook</p> -->
  </a>

  <div class="navbar-home-right hidden-xs hidden-sm">
      <%= link_to "Browse Campaigns", campaigns_path, :class => 'btn navbar-home-link navbar-home-item' %>
    <% if user_signed_in?  %>
      <%= link_to "Create A Campaign", new_campaign_path, :class => 'btn navbar-home-link navbar-home-item' %>
    <% end %>
    <div class="navbar-home-item">
      <div class="dropdown">
          <% if user_signed_in? %>
            <p class="avatar dropdown-toggle" id="navbar-home-menu" data-toggle="dropdown">
              <%= cl_image_tag current_user.profile_picture, height: 50, width: 50, :style => 'border-radius:50%;background-size:cover;' %>
            </p>
            <ul class="dropdown-menu dropdown-menu-right navbar-home-dropdown-menu">
              <li><%= link_to "My Profile", my_profile_path %></li>
              <li><%= link_to "Track My Pledges", profile_orders_path(current_user) %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            </ul>
          <% else %>
            <%= link_to "Create Account", new_user_registration_path, :class => "btn navbar-home-item navbar-home-link" %>
            <%= link_to "Login", new_user_session_path, :class => "btn navbar-home-item navbar-home-link" %>
          <% end %>
      </div>
    </div>
  </div>


  <div class="navbar-home-item hidden-md hidden-lg" style="margin:0">
    <div class="dropdown-small">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button" style="color: black; align-self: right;"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-home-dropdown-menu">
        <% if user_signed_in? %>
          <li> <%= link_to "Find A Campaign", campaigns_path, :class => 'btn find-campaign-button' %></li>
          <li><%= link_to "Create A Campaign", new_campaign_path, :class => 'btn create-campaign-button' %></li>
          <li><%= link_to "My Profile", my_profile_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Create Account", new_user_registration_path, :class => "navbar-home-item navbar-home-link" %></li>
          <li><%= link_to "Login", new_user_session_path, :class => "navbar-home-item navbar-home-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

