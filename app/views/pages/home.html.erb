            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%#= cl_image_path campaign.photos.first.image_url, height: 200, width: 400, crop: :fill %>')">
              <h3><%#= campaign.name %></h3>
              <p><small><%#= campaign.genre.upcase %></small></p>
            </div>
            <div class="card-bottom">
              <p><i class="far fa-calendar-check"></i> <%#= campaign.date.to_s.split('-').reverse.join('-') %></p>
              <p><i class="far fa-compass"></i> <%#= campaign.address %></p>
              <p><%#= campaign.description[0..100] %>...</p>
            </div>
          </div>
        </div> -->
        <div class="list-card">
          <div class="list-card-date">
            <p><%= campaign.date.strftime("%b") %></p>
            <h2><%= campaign.date.strftime("%e") %></h2>
          </div>
          <div class="list-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%= cl_image_path campaign.photos.first.image_url, height: 200, width: 400, crop: :fill %>')"></div>
          <div class="list-card-text">
            <h3><%= campaign.name %></h3>
            <h5><%= campaign.genre %> | <%= campaign.address %></h5>
          </div>
          <div class="list-card-status">
            <h4><%= (campaign.current_funding_amount / campaign.funding_goal) * 100 %>%</h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
